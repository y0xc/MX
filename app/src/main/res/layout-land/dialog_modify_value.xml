<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/floating_spacing_lg"
    app:maxHeightPercent="0.85"
    app:maxWidthPercent="0.9">

    <!-- 上层：左右分栏（内容 + 键盘） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/floating_spacing_md">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingBottom="4dp"
                    android:text="@string/modify_dialog_title"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/floating_text_h2"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/subtitle_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingBottom="@dimen/floating_spacing_md"
                    android:text="@string/modify_dialog_subtitle"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/floating_text_caption" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/floating_spacing_md">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/floating_spacing_sm"
                        android:text="@string/label_value"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/floating_text_body" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/input_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/floating_height_button_sm"
                            android:background="@android:color/transparent"
                            android:cursorVisible="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="none"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:textColor="#FFFFFF"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/floating_text_body">

                            <requestFocus />
                        </EditText>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:dividerColor="#33FFFFFF" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_convert_base"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/content_desc_convert_hex"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/icon_arrow_drop_down_24px"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/floating_spacing_md">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/floating_spacing_sm"
                        android:text="@string/label_type"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/floating_text_body" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/btn_value_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_transparent_border"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingStart="@dimen/floating_spacing_md"
                        android:paddingEnd="@dimen/floating_spacing_md"
                        android:text="@string/description_auto_type"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/floating_text_caption" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/floating_spacing_sm">

                    <!-- CheckBox -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_is_freeze"
                        style="@style/FloatingCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_value_freeze"
                        android:checked="false"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            app:dividerColor="#33FFFFFF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <moe.fuqiuluo.mamu.widget.BuiltinKeyboard
                android:id="@+id/builtin_keyboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <!-- 底部按钮（独立，占满宽度） -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_goto"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/floating_height_button_sm"
            android:background="@android:color/transparent"
            android:text="@string/button_goto"
            android:textColor="#FFFFFF" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/floating_height_button_sm"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:text="@string/button_no"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/floating_height_button_sm"
            android:background="@android:color/transparent"
            android:text="@string/button_yes"
            android:textColor="#2196F3" />
    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>