<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="16dp"
    app:maxWidthPercent="0.85"
    app:maxHeightPercent="0.9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="8dp"
        android:text="@string/dialog_filter_title"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 单页最大显示数量 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_max_display_count"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/input_max_display_count"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="end|center_vertical"
                    android:inputType="numberDecimal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/default_page_size"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    tools:ignore="Autofill,LabelFor,TextFields" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#22FFFFFF" />

            <!-- 地址范围过滤 -->
            <CheckBox
                android:id="@+id/cb_enable_address_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/label_address_range_filter"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/container_address_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="0dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_address_start"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/input_address_start"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:hint="@string/hint_address_start"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#555555"
                            android:textSize="12sp"
                            tools:ignore="Autofill,LabelFor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#33FFFFFF" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_address_end"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/input_address_end"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:hint="@string/hint_address_end"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#555555"
                            android:textSize="12sp"
                            tools:ignore="Autofill,LabelFor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#33FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#22FFFFFF" />

            <!-- 数据类型过滤 -->
            <CheckBox
                android:id="@+id/cb_enable_data_type_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/label_data_type_filter"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_select_data_types"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_transparent_border"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/button_select_data_types"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#33FFFFFF" />

    <moe.fuqiuluo.mamu.widget.BuiltinKeyboard
        android:id="@+id/builtin_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/button_reset"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/button_cancel"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/button_apply"
            android:textColor="#2196F3"
            android:textSize="14sp" />
    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>