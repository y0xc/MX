<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/floating_spacing_lg"
    app:maxHeightPercent="0.9"
    app:maxWidthPercent="0.9">

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 标题 -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_text"
            style="@style/FloatingText.H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/floating_spacing_xs"
            android:text="@string/modify_dialog_title" />

        <!-- 副标题 -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/subtitle_range"
            style="@style/FloatingText.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/floating_spacing_md"
            android:text="@string/modify_dialog_subtitle" />

        <!-- 值输入区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/floating_spacing_md">

            <com.google.android.material.textview.MaterialTextView
                style="@style/FloatingText.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/floating_spacing_sm"
                android:text="@string/label_value" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/floating_spacing_sm"
                android:layout_marginEnd="@dimen/floating_spacing_sm"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_value"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="none"
                    android:paddingStart="@dimen/floating_spacing_xs"
                    android:paddingEnd="@dimen/floating_spacing_xs"
                    android:textColor="@color/floating_text_primary"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/floating_text_body">

                    <requestFocus />
                </EditText>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerColor="@color/floating_divider" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_convert_base"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/floating_icon_lg"
                android:layout_height="@dimen/floating_icon_lg"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:contentDescription="@string/content_desc_convert_hex"
                app:icon="@drawable/icon_arrow_drop_down_24px"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="@color/floating_text_primary" />
        </LinearLayout>

        <!-- 类型选择 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/floating_spacing_md">

            <com.google.android.material.textview.MaterialTextView
                style="@style/FloatingText.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/floating_spacing_sm"
                android:text="@string/label_type" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btn_value_type"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_transparent_border"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="@dimen/floating_spacing_md"
                android:paddingEnd="@dimen/floating_spacing_md"
                android:text="@string/description_auto_type"
                android:textColor="@color/floating_text_primary"
                android:textSize="@dimen/floating_text_caption" />
        </LinearLayout>

        <!-- CheckBox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_is_freeze"
            style="@style/FloatingCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_value_freeze"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <!-- 分割线 -->
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/floating_spacing_xs"
        android:layout_marginBottom="@dimen/floating_spacing_md"
        app:dividerColor="@color/floating_divider" />

    <!-- 内置键盘 -->
    <moe.fuqiuluo.mamu.widget.BuiltinKeyboard
        android:id="@+id/builtin_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_spacing_md" />

    <!-- 底部按钮 -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_goto"
            style="@style/FloatingButton.Text.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_goto" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/FloatingButton.Text.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/floating_spacing_sm"
            android:text="@string/button_no" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            style="@style/FloatingButton.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_yes" />

    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>
