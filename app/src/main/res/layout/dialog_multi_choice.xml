<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    app:maxWidthPercent="0.8"
    app:maxHeightPercent="0.9">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/floating_spacing_lg"
        android:paddingBottom="@dimen/floating_spacing_md">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="标题"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/floating_text_h2"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2F2F2F" />

    <!-- 选项列表 -->
    <ListView
        android:id="@+id/option_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="multipleChoice"
        android:divider="#2F2F2F"
        android:dividerHeight="1dp"
        android:scrollbars="vertical" />

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2F2F2F" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/floating_spacing_sm">

        <Button
            android:id="@+id/btn_reset"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="64dp"
            android:paddingHorizontal="@dimen/floating_spacing_lg"
            android:paddingVertical="@dimen/floating_spacing_sm"
            android:text="重置"
            android:textColor="#FF9800"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="64dp"
            android:paddingHorizontal="@dimen/floating_spacing_lg"
            android:paddingVertical="@dimen/floating_spacing_sm"
            android:text="@string/button_cancel"
            android:textColor="#CCCCCC" />

        <Button
            android:id="@+id/btn_ok"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="64dp"
            android:paddingHorizontal="@dimen/floating_spacing_lg"
            android:paddingVertical="@dimen/floating_spacing_sm"
            android:text="@string/button_confirm"
            android:textColor="#1976D2" />

    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>
