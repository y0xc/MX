<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:minWidth="280dp"
    android:orientation="vertical"
    app:maxWidth="400dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/icon_title"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_delete_24px"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/label_remove" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_remove_title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2F2F2F" />

    <!-- 选项列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 移除全部选项 -->
        <LinearLayout
            android:id="@+id/option_remove_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_settings_item_ripple"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_delete_24px"
                android:tint="#FF5252"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/option_remove_all" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/option_remove_all"
                android:textColor="#FF5252"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 恢复并移除选项 -->
        <LinearLayout
            android:id="@+id/option_restore_and_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_settings_item_ripple"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/history_24px"
                android:tint="#FFAB00"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/option_restore_and_remove" />

            <TextView
                android:id="@+id/text_restore_and_remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/option_restore_and_remove"
                android:textColor="#FFAB00"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- 移除选中选项 -->
        <LinearLayout
            android:id="@+id/option_remove_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_settings_item_ripple"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/deselect_24px"
                android:tint="#FF5252"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/option_remove_selected" />

            <TextView
                android:id="@+id/text_remove_selected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/option_remove_selected"
                android:textColor="#FF5252"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2F2F2F" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="64dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/button_cancel"
            android:textColor="#CCCCCC" />

    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>