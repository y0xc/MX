<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:minWidth="280dp"
    android:orientation="vertical"
    app:maxWidthPercent="0.8"
    app:maxHeightPercent="0.9">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/floating_spacing_lg"
        android:paddingBottom="@dimen/floating_spacing_md">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/search_history_title"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/floating_text_h2"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_all"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="@dimen/floating_icon_lg"
            android:layout_height="@dimen/floating_icon_lg"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/search_history_clear_all"
            app:icon="@drawable/baseline_delete_24"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:iconTint="@color/floating_text_secondary" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2F2F2F" />

    <!-- 空状态提示 -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/floating_spacing_xl"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_history_empty"
            android:textColor="@color/floating_text_secondary"
            android:textSize="@dimen/floating_text_body" />

    </LinearLayout>

    <!-- 历史记录列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2F2F2F" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/floating_spacing_sm">

        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minWidth="64dp"
            android:paddingHorizontal="@dimen/floating_spacing_lg"
            android:paddingVertical="@dimen/floating_spacing_sm"
            android:text="@string/button_cancel"
            android:textColor="#CCCCCC" />

    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>
