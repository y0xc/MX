<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/key_1"
            style="@style/KeyboardButton"
            android:text="1" />

        <Button
            android:id="@+id/key_2"
            style="@style/KeyboardButton"
            android:text="2" />

        <Button
            android:id="@+id/key_3"
            style="@style/KeyboardButton"
            android:text="3" />

        <Button
            android:id="@+id/key_4"
            style="@style/KeyboardButton"
            android:text="4" />

        <Button
            android:id="@+id/key_5"
            style="@style/KeyboardButton"
            android:text="5" />

        <Button
            android:id="@+id/key_colon"
            style="@style/KeyboardButton"
            android:text=":" />

        <ImageButton
            android:id="@+id/key_delete"
            style="@style/KeyboardIconButton"
            android:contentDescription="删除"
            android:src="@drawable/backspace_24px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/key_6"
            style="@style/KeyboardButton"
            android:text="6" />

        <Button
            android:id="@+id/key_7"
            style="@style/KeyboardButton"
            android:text="7" />

        <Button
            android:id="@+id/key_8"
            style="@style/KeyboardButton"
            android:text="8" />

        <Button
            android:id="@+id/key_9"
            style="@style/KeyboardButton"
            android:text="9" />

        <Button
            android:id="@+id/key_0"
            style="@style/KeyboardButton"
            android:text="0" />

        <Button
            android:id="@+id/key_semicolon"
            style="@style/KeyboardButton"
            android:text=";" />

        <ImageButton
            android:id="@+id/key_select_all"
            style="@style/KeyboardIconButton"
            android:contentDescription="全选"
            android:src="@drawable/select_all_24px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/key_tilde"
            style="@style/KeyboardButton"
            android:text="~" />

        <Button
            android:id="@+id/key_dot"
            style="@style/KeyboardButton"
            android:text="." />

        <Button
            android:id="@+id/key_minus"
            style="@style/KeyboardButton"
            android:text="-" />

        <ImageButton
            android:id="@+id/key_move_left"
            style="@style/KeyboardIconButton"
            android:contentDescription="左移"
            android:src="@drawable/arrow_left_alt_24px" />

        <ImageButton
            android:id="@+id/key_move_right"
            style="@style/KeyboardIconButton"
            android:contentDescription="右移"
            android:src="@drawable/arrow_right_alt_24px" />

        <ImageButton
            android:id="@+id/key_history"
            style="@style/KeyboardIconButton"
            android:contentDescription="历史"
            android:src="@drawable/history_24px" />

        <ImageButton
            android:id="@+id/key_expand"
            style="@style/KeyboardIconButton"
            android:contentDescription="展开"
            android:src="@drawable/unfold_more_24px" />
    </LinearLayout>

</LinearLayout>
